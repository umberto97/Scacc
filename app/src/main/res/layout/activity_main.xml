<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <view android:layout_width="341dp" android:layout_height="425dp" class="com.example.gioco.Scacchiera"
          id="@+id/view"
          android:layout_marginBottom="100dp"
          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Numero caselle: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="108dp"
            android:layout_height="37dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="20dp"/>
</android.support.constraint.ConstraintLayout>